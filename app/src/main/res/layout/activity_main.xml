<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_real"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:padding="4dp"
            android:text="城市"
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/tv_week"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:text="风向"
            android:id="@+id/tv_direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/tv_temperature"
            android:layout_alignBottom="@+id/tv_temperature"
            android:layout_toLeftOf="@+id/tv_weather"
            android:layout_toStartOf="@+id/tv_weather"/>
        <TextView
            android:text="风级"
            android:id="@+id/tv_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:text="周"
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/tv_date"
            android:layout_toRightOf="@+id/tv_moon"
            android:layout_toEndOf="@+id/tv_moon"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>

        <TextView
            android:text="温度"
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/tv_weather"
            android:layout_toEndOf="@+id/tv_weather"/>

        <TextView
            android:text="湿度"
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignBaseline="@+id/tv_temperature"
            android:layout_alignBottom="@+id/tv_temperature"
            android:layout_toRightOf="@+id/tv_moon"
            android:layout_toEndOf="@+id/tv_moon"/>

        <TextView
            android:text="日期"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_temperature"
            android:layout_toEndOf="@+id/tv_temperature"/>

        <TextView
            android:text="农历"
            android:id="@+id/tv_moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:layout_alignBaseline="@+id/tv_weather"
            android:layout_alignBottom="@+id/tv_weather"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="时间"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/tv_city_name"
            android:layout_alignRight="@+id/tv_moon"
            android:layout_alignEnd="@+id/tv_moon"/>

        <TextView
            android:text="sx"
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
